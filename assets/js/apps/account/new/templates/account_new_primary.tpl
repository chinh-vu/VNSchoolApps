   <form class="form-horizontal">
        <div class="form-group">
            <div class="col-md-3">
                <div class="controls">
                    <input type="text" id="firstName" name="firstName" placeholder="First Name" class="form-control">
                </div>
            </div>
            <div class="col-md-2">
                <div class="controls">
                    <input type="text" id="middletName" name="middletName" placeholder="Middle Name"
                           class="form-control">
                </div>
            </div>
            <div class="col-md-3">
                <div class="controls">
                    <input type="text" id="lastName" name="lastName" placeholder="Last Name" class="form-control">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5">
                <div class="controls">
                    <input type="text" id="addressLine1" name="addressLine1" placeholder="Address Line 1"
                           class="form-control">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5">
                <div class="controls">
                    <input type="text" id="addressLine2" name="addressLine2" placeholder="Address Line 2"
                           class="form-control">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <div class="controls">
                    <input type="text" id="city" name="city" placeholder="City" class="form-control">
                </div>
            </div>
            <div class="col-md-2">
                <div class="controls">
                    <select class="form-control" id="state" name="state">
                        <option value="IW">Iowa</option>
                        <option value="MN">Minnesota</option>
                        <option value="WI">Wisconsin</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="controls">
                    <input type="text" id="postalCode" placeholder="Postal Code" class="form-control">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <div class="controls">
                    <input type="text" id="phoneNumber" name="phoneNumber" placeholder="Phone Number"
                           class="form-control">
                </div>
            </div>
            <div class="col-md-3">
                <div class="controls">
                    <input type="text" id="email" name="email" placeholder="Email"
                           class="form-control">
                </div>
            </div>
            <div class="col-md-2">
                <div class="controls">
                    <select class="form-control" id="contactMthd" name="contactMthd">
                        <option value="phone">Phone</option>
                        <option value="email">Email</option>
                        <option value="text">Text</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">&nbsp;</div>
            <div class="col-md-3">
                <button type="button" class="btn btn-primary js-save-primary">&nbsp;&nbsp;&nbsp;&nbsp;Save&nbsp;&nbsp;&nbsp;&nbsp;</button>
                <button type="button" class="btn btn-success js-new-other">New Profile</button>
            </div>
            <div class="col-md-2">&nbsp;</div>
        </div>
    </form>
